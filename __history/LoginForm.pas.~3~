unit LoginForm;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Registroform;

type
  TLogin = class(TForm)
    Button1: TButton;
    Button2: TButton;
    Edit1: TEdit;
    Edit2: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Login: TLogin;
  Registro : TRegistro;

implementation

{$R *.dfm}

uses Conexão;

procedure TLogin.Button2Click(Sender: TObject);
begin

Registro := Registro.Create(self);
Registro.ShowModal;
Registro.Free;

end;

end.
