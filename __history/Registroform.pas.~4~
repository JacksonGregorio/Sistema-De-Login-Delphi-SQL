type
  TRegistro = class(TForm)
    Button2: TButton;
    QueryRe: TFDQuery;
    QueryReID: TIntegerField;
    QueryReNome: TStringField;
    QueryReSenha: TStringField;
    QueryReUsuario: TStringField;
