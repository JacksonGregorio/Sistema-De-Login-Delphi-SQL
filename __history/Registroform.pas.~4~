{$R *.dfm}

uses LoginForm;








procedure TRegistro.Button2Click(Sender: TObject);
begin
    QueryRe.Append;

    try
      QueryRe.Post;
    except

    begin
         ShowMessage('Falha ao Cliar O cliente');
    end;

    end;

    ShowMessage('Cliente Novo Adicionado');

end;



end.
